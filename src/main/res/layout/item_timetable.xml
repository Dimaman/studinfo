<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBgToolbar"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginTop="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/time_par"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_text"
        app:layout_constraintTop_toTopOf="@id/item_text"
        app:layout_constraintBottom_toBottomOf="@id/text_teacher"
        android:layout_marginStart="5dp"
        android:text="8:00\n9:30"
        android:textSize="20sp"/>



    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_teacher"
        app:layout_constraintStart_toEndOf="@id/time_par"
        app:layout_constraintEnd_toStartOf="@id/cab_text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:text="Техника и технология эфирных масел и парфюмерно-косметических продуктов"
        />
    <TextView
        android:id="@+id/text_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_text"
        app:layout_constraintStart_toStartOf="@id/item_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/grey"
        android:text="Мартовщук Евгения Владимировна"
        />

    <TextView
        android:id="@+id/cab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_text"
        app:layout_constraintBottom_toBottomOf="@id/text_teacher"
        android:textSize="20sp"
        android:layout_marginEnd="5dp"
        android:text="Г-112"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
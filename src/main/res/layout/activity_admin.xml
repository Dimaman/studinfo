<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_up"
        style="@style/toolbar"
        app:contentInsetStart="0dp"
        android:elevation="4dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_toolbar_up"
                style="@style/toolbar_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Администратор"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/add_unity_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_up"
        android:background="@drawable/item_menu_bg"
        />

    <TextView
        android:id="@+id/add_unity_btn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить объединение"
        app:layout_constraintTop_toTopOf="@id/add_unity_btn"
        app:layout_constraintBottom_toBottomOf="@id/add_unity_btn"
        app:layout_constraintStart_toStartOf="@id/add_unity_btn"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorBigText"
        android:textSize="20sp"/>

    <View
        android:id="@+id/users_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/add_unity_btn"
        android:background="@drawable/item_menu_bg"
        />

    <TextView
        android:id="@+id/users_btn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пользователи"
        app:layout_constraintTop_toTopOf="@id/users_btn"
        app:layout_constraintBottom_toBottomOf="@id/users_btn"
        app:layout_constraintStart_toStartOf="@id/users_btn"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorBigText"
        android:textSize="20sp"/>

    <View
        android:id="@+id/stats_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/users_btn"
        android:background="@drawable/item_menu_bg"
        />

    <TextView
        android:id="@+id/stats_btn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статистика приложения"
        app:layout_constraintTop_toTopOf="@id/stats_btn"
        app:layout_constraintBottom_toBottomOf="@id/stats_btn"
        app:layout_constraintStart_toStartOf="@id/stats_btn"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorBigText"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
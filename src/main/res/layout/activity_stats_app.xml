<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StatsAppActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_up"
        style="@style/toolbar"
        app:contentInsetStart="0dp"
        android:elevation="4dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_toolbar_up"
                style="@style/toolbar_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Статистика"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/guests_view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/users_view"
        android:background="@color/colorBgView"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/guests_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guests_view"
        app:layout_constraintStart_toStartOf="@id/guests_view"
        app:layout_constraintEnd_toEndOf="@id/guests_view"
        android:text="Пользователей"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/guests_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guests_label"
        app:layout_constraintStart_toStartOf="@id/guests_view"
        app:layout_constraintEnd_toEndOf="@id/guests_view"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="0"/>

    <View
        android:id="@+id/users_view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_up"
        app:layout_constraintStart_toEndOf="@id/guests_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorBgView"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/users_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/users_view"
        app:layout_constraintStart_toStartOf="@id/users_view"
        app:layout_constraintEnd_toEndOf="@id/users_view"
        android:text="С логином"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/users_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guests_label"
        app:layout_constraintStart_toStartOf="@id/users_view"
        app:layout_constraintEnd_toEndOf="@id/users_view"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="0"/>

    <View
        android:id="@+id/today_view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/guests_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unity_view"
        android:background="@color/colorBgView"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/today_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/today_view"
        app:layout_constraintStart_toStartOf="@id/today_view"
        app:layout_constraintEnd_toEndOf="@id/today_view"
        android:text="Сегодня"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/today_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/today_label"
        app:layout_constraintStart_toStartOf="@id/today_view"
        app:layout_constraintEnd_toEndOf="@id/today_view"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="0"/>

    <View
        android:id="@+id/unity_view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/guests_view"
        app:layout_constraintStart_toEndOf="@id/today_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorBgView"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/unity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/unity_view"
        app:layout_constraintStart_toStartOf="@id/unity_view"
        app:layout_constraintEnd_toEndOf="@id/unity_view"
        android:text="объединений"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/unity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/unity_label"
        app:layout_constraintStart_toStartOf="@id/unity_view"
        app:layout_constraintEnd_toEndOf="@id/unity_view"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="0"/>

    <View
        android:id="@+id/news_view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/unity_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/del_news_view"
        android:background="@color/colorBgView"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/news_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/news_view"
        app:layout_constraintStart_toStartOf="@id/news_view"
        app:layout_constraintEnd_toEndOf="@id/news_view"
        android:text="Постов"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/news_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_label"
        app:layout_constraintStart_toStartOf="@id/news_view"
        app:layout_constraintEnd_toEndOf="@id/news_view"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="0"/>

    <View
        android:id="@+id/del_news_view"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/today_view"
        app:layout_constraintStart_toEndOf="@id/news_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorBgView"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/del_news_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/del_news_view"
        app:layout_constraintStart_toStartOf="@id/del_news_view"
        app:layout_constraintEnd_toEndOf="@id/del_news_view"
        android:text="Удаленных"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/del_news_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/del_news_label"
        app:layout_constraintStart_toStartOf="@id/del_news_view"
        app:layout_constraintEnd_toEndOf="@id/del_news_view"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:text="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>